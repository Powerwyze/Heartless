rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own partners
    match /partners/{partnerId} {
      // Allow create if userId in the new document matches authenticated user
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow read/update/delete if userId in existing document matches authenticated user
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Allow access to subcollections (traits, preferences, checklist, logs)
      match /{subcollection}/{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
